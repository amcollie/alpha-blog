<h1>New article</h1>
<% if @article.errors.any? %>
<h2>The following errors prevented the article from being saved.</h2>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with scope: :article, url: articles_path, local: true do |f| %>
  <label for='title'><%= f.label :title %></label>
  <p id='title'><%= f.text_field :title %></p>
  <label for='description'><%= f.label :description %></label>
  <p id='description'><%= f.text_area :description %></p>
  <%= f.submit %>
<% end %>